    <body>
    
 
<% function pagination() { %>

  <% if (((movieid - 1) !=  -1)) { %> 
    <a href="http://localhost:8080/movieinfo/<%=[Number(movieid)-1] %>" class="arrow" >
    <i class="medium material-icons" id="arrowLeft">chevron_left</i></a>
    <% } %>

   <a href="http://localhost:8080/"><span></span></a>

<% if (movieid < 4) { %>
     
    <a href="http://localhost:8080/movieinfo/<%=[Number(movieid)+1]%>" class="arrow" >
    <i class="medium material-icons" id="arrowRight" >chevron_right</i></a>
<% } %>
<% }%>
<%= pagination() %>


<!--Required Materialize script-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
      </body>
